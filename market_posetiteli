#include <bits/stdc++.h>
using namespace std;
/*
4
15:00 120
14:30 240
10:15 100
16:10 50
16:05 30
*/
/*
3
10:00 120
15:15 45
15:00 60
*/
int main()
{
    int n;
    cin>>n;
    vector<pair<int, int> > kupuvaci;
    for (int i = 0 ; i < n; i++)
    {
        string Vlez, Vreme;
        cin>>Vlez>>Vreme;
        int h=stoi(Vlez.substr(0, 2));
        int m=stoi(Vlez.substr(3));
        int vlez=60*h+m;
        int vreme=stoi(Vreme);
        kupuvaci.push_back({vlez, vreme});
    }

    sort(kupuvaci.begin(), kupuvaci.end());

    int rez=0;
    priority_queue<pair<int, int>, vector<pair<int, int>>, greater<pair<int, int> > > momentalno_kupuvaci;
    //da gi vadi vo rastecki redosled
    for (auto kupuvac : kupuvaci)
    {
        int vreme=kupuvac.first;
        int izlez=kupuvac.second;
        while (!momentalno_kupuvaci.empty() && momentalno_kupuvaci.top().first <= vreme)
        {
            momentalno_kupuvaci.pop();
        }
        momentalno_kupuvaci.push({vreme+izlez, 0});
        rez=max(rez, (int)momentalno_kupuvaci.size());
    }

    cout<<rez<<endl;
    return 0;
}
